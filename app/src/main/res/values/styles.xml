<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FloatingActionButton" parent="AppTheme">
        <item name="backgroundTint">@color/floatActionBarColor</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="FloatingActionButton.Plus" parent="FloatingActionButton">
        <item name="srcCompat">@drawable/ic_plus_24_svg</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/titleTextColor</item>
    </style>

    <style name="TextAppearance.Title.Subtitle" parent="TextAppearance.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/titleTextColor</item>
    </style>

    <style name="TimePicker" parent="AppTheme">
    </style>

</resources>
